{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Lista zadań</h1>
    
    <div class="mb-3">
        <a href="{{ path('task_new') }}" class="btn btn-primary me-2">Dodaj zadanie</a>
        <a href="{{ path('task_swimlane') }}" class="btn btn-secondary">Pokaż Swimlane</a>
    </div>

    {% if tasks|length > 0 %}
        <ul class="list-group">
            {% for task in tasks %}
                <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    <div>
                        <a href="{{ path('task_show', {id: task.id}) }}" class="fw-bold text-decoration-none">{{ task.title }}</a>
                        
                        {% set status_badge_class = {
                            'Wykonany': 'bg-success',
                            'Oczekujący': 'bg-primary',
                            'Odrzucony': 'bg-danger'
                        }[task.status]|default('bg-secondary') %}

                        <span class="badge {{ status_badge_class }} text-white ms-2">{{ task.status }}</span>
                        
                        <p class="mb-1 mt-2 mt-md-0">{{ task.description }}</p>
                        <small class="text-muted">
                            DL: {{ task.deadline ? task.deadline|date('Y-m-d') : 'brak terminu' }} 
                            - autor: {{ task.user.email }}
                        </small>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <a href="{{ path('task_edit', {id: task.id}) }}" class="btn btn-sm btn-outline-primary">Edytuj</a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Brak zadań do wyświetlenia.
        </div>
    {% endif %}
</div>
{% endblock %}
